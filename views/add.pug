doctype html
html
  head
    title Add Task
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f3e8ff;
        color: white;
        padding: 2rem;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #e1bee7;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
      }
      h1 {
        color: black;
        margin-bottom: 1.5rem;
      }
      input, textarea, button {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 8px;
        border: 1px solid #ccc;
      }
      button {
        background-color: #8e24aa;
        color: white;
        border: none;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background-color: #6a1b9a;
      }
      .error {
        color: red;
        font-weight: bold;
      }
      a {
        color: white;
        text-decoration: none;
      }
      .home-button {
        position: fixed;
        top: 20px;
        left: 20px;
        font-size: 2rem;
        text-decoration: none;
        background: #ff4081;
        padding: 12px 18px;
        border-radius: 50%;
        color: white;
        font-weight: bold;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
      }
      .home-button:hover {
        background-color: #ff80ab;
        transform: scale(1.1);
      }

  body
    a.home-button(href='/') üè†
    .container
      h1 Add a New Task
      if error
        p.error=error
      form(action='/add' method='POST')
        input(type='text' name='task' placeholder='Task name' required)
        textarea(name='details' placeholder='Task details' rows='4') 
        input(type='date' name='due_date' required)
        button(type='submit') Add Task
