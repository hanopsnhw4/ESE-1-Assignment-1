doctype html
html
  head
    title Add Task
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f3e8ff;
        color: white;
        padding: 2rem;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #e1bee7;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
      }
      h1 {
        color: black;
        margin-bottom: 1.5rem;
      }
      input[type="text"], input[type="date"], textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
      button {
        background-color: #8e24aa;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s;
      }
      button:hover {
        background-color: #6a1b9a;
      }

  body
    .container
      a(href='/' style='position: absolute; top: 20px; left: 20px; font-size: 1.5rem; text-decoration: none') üè†

      h1 Add Task

      form(action='/add' method='POST')
        label(for='task') Task:
        input(type='text' name='task' id='task' placeholder='Enter task' required)
        
        label(for='details') Details:
        textarea(name='details' id='details' placeholder='Enter task details' rows='4' required)

        label(for='due_date') Due Date:
        input(type='date' name='due_date' id='due_date' required)

        button(type='submit') Add Task
