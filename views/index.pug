doctype html
html
  head
    title My To Do List
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f3e8ff;
        color: white;
        padding: 2rem;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #e1bee7;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
      }
      h1 {
        color: black;
        margin-bottom: 1.5rem;
      }
      .task {
        background: #ba68c8;
        margin: 10px 0;
        padding: 10px;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .task.danger {
        background-color: #e57373;
      }
      .task.warning {
        background-color: #ffb74d;
      }
      .delete-button {
        background-color: transparent;
        color: white;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        border-radius: 50%;
        padding: 5px 10px;
        transition: background 0.3s;
      }
      .delete-button:hover {
        background-color: #ce93d8;
      }
      .add-button {
        margin-top: 20px;
        background-color: #8e24aa;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s;
      }
      .add-button:hover {
        background-color: #6a1b9a;
      }
      a {
        color: white;
        text-decoration: none;
        font-weight: bold;
      }
      .no-tasks {
        color: black;
        font-size: 1.2rem;
      }
      .home-button {
        position: fixed;
        top: 20px;
        left: 20px;
        font-size: 2rem;
        text-decoration: none;
        background: #ff4081;
        padding: 12px 18px;
        border-radius: 50%;
        color: white;
        font-weight: bold;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
      }
      .home-button:hover {
        background-color: #ff80ab;
        transform: scale(1.1);
      }
      .logout-button {
        background-color: #ff4081;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        border: none;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 20px;
        transition: background 0.3s;
      }
      .logout-button:hover {
        background-color: #ff80ab;
      }

  body
    .container
      h1 To Do List

      if todos && todos.length > 0
        each task in todos
          - const now = new Date();
          - const dueDate = new Date(task.due_date);
          - const formattedDate = `${String(dueDate.getDate()).padStart(2, '0')}/${String(dueDate.getMonth() + 1).padStart(2, '0')}/${dueDate.getFullYear()}`
          - const timeDiff = dueDate - now;  // Get the difference in milliseconds
          - const oneDay = 24 * 60 * 60 * 1000;  // Milliseconds in a day
          - const twoDays = 2 * oneDay;  // Two days in milliseconds
          - const threeDays = 3 * oneDay;  // Three days in milliseconds
          - const dangerClass = timeDiff < 0 ? 'danger' : ''; // Overdue task
          - const warningClass = timeDiff >= 0 && timeDiff <= twoDays ? 'warning' : ''; // Due within 2 days

          .task(class= dangerClass + ' ' + warningClass)
            a(href=`/task/${task.id}`) #{task.task}
            span= formattedDate
            form(action=`/delete/${task.id}` method='POST' style='display:inline')
              button.delete-button(type='submit') ðŸ—‘ï¸

      else
        p.no-tasks No tasks found.

      a(href='/add')
        button.add-button Add Task

      if loggedIn
        form(action='/logout' method='POST')
          button.logout-button(type='submit') Logout

