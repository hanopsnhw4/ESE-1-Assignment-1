doctype html
html
  head
    title Edit Task
    style.
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f3e8ff;
        color: #6a1b9a;
        padding: 2rem;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #e1bee7;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        position: relative;
      }
      h1 {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        font-weight: 600;
        color: #6a1b9a; /* Deep purple for headings */
        margin-bottom: 1.5rem;
        letter-spacing: 2px; /* Spacing between letters */
      }
      h2 {
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        color: #8e24aa;
        margin-bottom: 1rem;
        text-transform: none; /* Keep text in normal case */
        font-weight: 500;
        letter-spacing: 1px; /* Add spacing between letters */
      }
      input[type="text"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 8px;
        border: none;
        font-size: 1rem;
      }
      button {
        background-color: #8e24aa;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s;
      }
      button:hover {
        background-color: #6a1b9a;
      }
      /* Divider style */
      .divider {
        height: 1px;
        background-color: #e1bee7; /* Light gray divider */
        margin: 20px 0;
      }

  body
    .container
      h1 Edit Task

      .divider
      form(action=`/task/${task.id}/edit` method='POST')
        div
          label(for='task') Task Name
          input(type='text' name='task' value=task.task required)
        .divider
        div
          label(for='details') Details
          input(type='text' name='details' value=task.details required)
        .divider
        div
          label(for='due_date') Due Date (DD/MM/YYYY)
          input(type='text' name='due_date' value=task.due_date required)
        .divider
        div
          button(type='submit') Save Changes

      .divider
