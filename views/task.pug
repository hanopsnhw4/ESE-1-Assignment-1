doctype html
html
  head
    title Task Details
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f3e8ff;
        color: black;
        padding: 2rem;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #e1bee7;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
      }
      h1 {
        color: black;
        margin-bottom: 1.5rem;
      }
      p {
        margin: 10px 0;
      }
      button {
        background-color: #8e24aa;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s;
      }
      button:hover {
        background-color: #6a1b9a;
      }
      .home-button {
        position: fixed;
        top: 20px;
        left: 20px;
        font-size: 2rem;
        text-decoration: none;
        background: #ff4081;
        padding: 12px 18px;
        border-radius: 50%;
        color: white;
        font-weight: bold;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
      }
      .home-button:hover {
        background-color: #ff80ab;
        transform: scale(1.1);
      }

